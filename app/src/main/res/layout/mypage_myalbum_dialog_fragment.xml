<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog"
    android:layout_marginHorizontal="45dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <ImageView
        android:id="@+id/dialog_photo"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:background="@color/gray"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/dialog_confirm"
        style="@style/Widget.AppCompat.Button.myButton"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@drawable/button_shape_white"
        android:text="확인"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialog_save"
        app:layout_constraintTop_toBottomOf="@+id/dialog_photo"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/dialog_save"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@drawable/button_shape"
        android:text="저장"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dialog_confirm"
        app:layout_constraintTop_toBottomOf="@+id/dialog_photo"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>